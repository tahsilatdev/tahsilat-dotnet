@using System.Text.Json
@{
    ViewData["Title"] = "Pre-Auth Resolve";
}

<h2>Pre-Auth Resolve</h2>

<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.Result != null)
        {
            <div class="alert alert-success">
                <strong>Status:</strong> @ViewBag.Result.status
            </div>
            <pre>@JsonSerializer.Serialize(ViewBag.Result, new JsonSerializerOptions { WriteIndented = true })</pre>
        }

        <form asp-action="PreAuthResolve" method="post">
            <div class="mb-3">
                <label for="transactionId" class="form-label">Transaction ID</label>
                <input type="number" class="form-control" name="transactionId" required>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Resolution</label>
                <select class="form-control" name="status">
                    <option value="true">Approve (Capture)</option>
                    <option value="false">Cancel (Void)</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Resolve</button>
        </form>
    </div>
</div>
